# Basic API Settings
PROJECT_NAME="Assets Management API"
PROJECT_DESCRIPTION="API for Assets Management"
API_V1_STR="/api/v1"
VERSION="1.0.0"

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=False

# Security Settings
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Database Settings
POSTGRES_DB=assets_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
DATABASE_HOST=db # This should be the service name from docker-compose
DATABASE_PORT=5432

# Root account (app)
ROOT_ACCOUNT_USERNAME=root
ROOT_ACCOUNT_PASSWORD=root@root

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:5173"]

# Redis Settings (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=["image/jpeg","image/png"]

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Cache Settings
CACHE_TTL=3600